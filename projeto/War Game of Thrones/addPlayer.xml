<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
<screen id="addPlayer" controller="AddPlayerController">
	<layer id="popUpAddPlayer" childLayout="center" backgroundColor="#003f">
		<panel height="50%" width="50%" align="center" childLayout="center">
			<image filename="box.png" width="100%" height="100%" imageMode="resize:10,10,10,10,2,27,2,10,10,10,10,10">
				<interact onClick="next()"/>
			</image>
			<panel align="center" height="80%" width="80%" childLayout="horizontal">
				<panel valign="top" align="center" width="100%" childLayout="horizontal" padding="30px">
					<text textHAlign="left" font="calibri.fnt" color="#000000" text="Jogadores" width="50%"/>
					<text font="calibri.fnt" color="#000000" text="+Novo Jogador" width="50%" backgroundColor="#888888" visibleToMouse="true">
						<interact onClick="next()"/>
					</text>
				</panel>
			</panel>			
		</panel>
	</layer>
</screen>
</nifty>